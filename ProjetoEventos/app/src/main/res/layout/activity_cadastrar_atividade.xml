<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.CadastrarAtividadeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/nome_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:inputType="text"
            android:hint="Nome"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data: "
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/data_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD/MM/AAAA"
                android:textSize="18sp"
                android:onClick="pegarData"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tipo de atividade:"
            android:textSize="18sp"/>

        <RadioGroup
            android:id="@+id/group_tipo_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_palestra_atividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palestra"/>

            <RadioButton
                android:id="@+id/rb_minicurso_atividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minicurso"/>

            <RadioButton
                android:id="@+id/rb_mesa_redonda_atividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesa Redonda"/>

        </RadioGroup>

        <EditText
            android:id="@+id/descricao_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:hint="Descrição"/>

        <EditText
            android:id="@+id/valor_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:hint="Valor"
            android:inputType="number"/>

        <Button
            android:id="@+id/bt_add_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:text="Adicionar Atividade"/>
    </LinearLayout>


</ScrollView>