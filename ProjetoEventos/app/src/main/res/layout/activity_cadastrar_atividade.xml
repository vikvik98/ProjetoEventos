<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.CadastrarAtividadeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/nome_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:inputType="text"
            android:hint="@string/nome"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/data"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/add_data_atividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="DD/MM/AAAA"
                android:textSize="18sp"
                android:onClick="pegarData"/>
        </LinearLayout>

        <EditText
            android:id="@+id/add_hora_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:hint="Hora de inicio"/>

        <EditText
            android:id="@+id/add_hora_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:hint="Hora de Termino"/>


        <EditText
            android:id="@+id/add_tipo_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:hint="Tipo de atividade"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local:"/>

        <Spinner
            android:id="@+id/atividade_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/valor_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:hint="@string/valor"
            android:inputType="number"/>

        <Button
            android:id="@+id/bt_add_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_mod"
            android:layout_marginTop="4dp"
            android:onClick="adicionarAtividade"
            android:text="@string/adicionar_atividade"/>

    </LinearLayout>


</ScrollView>